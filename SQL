-- Crear la base de datos
CREATE DATABASE IF NOT EXISTS hotelmanagementsystem;
USE hotelmanagementsystem;

-- Crear la tabla de login con cedula como campo único
CREATE TABLE login (
    cedula VARCHAR(20) NOT NULL UNIQUE,
    password VARCHAR(25) NOT NULL
);

-- Insertar datos de prueba en login
INSERT INTO login (cedula, password) VALUES ('admin', '12345');

-- Crear la tabla de habitaciones
CREATE TABLE room (
    numerohab VARCHAR(10) PRIMARY KEY,
    dispo VARCHAR(20),
    estado VARCHAR(20),
    precio VARCHAR(20),
    tipo VARCHAR(20)
);

-- Crear la tabla de clientes con id único
CREATE TABLE customer (
    id VARCHAR(50) PRIMARY KEY,
    numero VARCHAR(30),
    nombre VARCHAR(30),
    genero VARCHAR(15),
    pais VARCHAR(20),
    hab VARCHAR(10),
    time VARCHAR(80),
    deposito VARCHAR(20),
    FOREIGN KEY (hab) REFERENCES room(numerohab)
);

-- Ajustes en la longitud de los campos y tipos de datos según requerimientos específicos
ALTER TABLE customer MODIFY id VARCHAR(50);
ALTER TABLE login MODIFY cedula VARCHAR(20) NOT NULL UNIQUE;

-- Verificar las tablas creadas
SHOW TABLES;


